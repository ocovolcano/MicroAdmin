<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.caro.microadmin">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_minima"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_minima"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login_Registro_Activity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".RegistroActivity" />
        <activity android:name=".ProductoActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".MainInventarioActivity"
            android:label="@string/title_activity_main_inventario"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MostrarProducto"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".AgregarVenta"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".AgregarCliente"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".AgregarEncargo"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustNothing"></activity>
    </application>

</manifest>
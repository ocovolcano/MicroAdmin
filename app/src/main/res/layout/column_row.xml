<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/labProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Producto:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/TextFirst"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/labProd"
        android:text="Nombre"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/labCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextFirst"
        android:text="Cantidad:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/TextSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextFirst"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/labCantidad"
        android:text="Cantidad"
        android:textSize="18sp" />

</RelativeLayout>
